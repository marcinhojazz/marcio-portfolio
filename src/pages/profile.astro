---
import Layout from "../layouts/Layout.astro";

---

<Layout>
  <section class="w-full border flex flex-col lg:flex-row lg:justify-between gap-12 px-4 text-white">
    <div class="bg-slate-700 lg:w-1/3 flex flex-col p-4 font-semibold rounded-lg">
      <h3 class="font-extrabold text-4xl">Márcio Machado</h3>
      <p>WebXR | SEO | Design</p>
      <p>Rio de Janeiro, RJ, Brasil.</p>
      <div class="divider divider-[red]"></div>
      <div>
        <h3 class="font-extrabold text-2xl">Competências</h3>
        <ul>
          <li><p>Design</p></li>
          <li><p>SEO</p></li>
          <li><p>Design</p></li>
          <li><p>Estratégias de Tráfego Orgânico</p></li>
        </ul>
      </div>
      <div>
        <h3 class="font-extrabold text-2xl">Skills</h3>
        <div>
          <h4 class="text-zinc-400">Softwares</h4>
          <ul class="text-sm">
            <li class="flex flex-row justify-between gap-4">
              <p>Figma</p>
              <div class="p-1 w-3/4 bg-red-500 flex">
                <div class="bg-[yellow] w-[70%] p-1"></div>
              </div>
            </li>
            <li class="flex flex-row justify-between gap-4">
              <p>Cinema 4D</p>
              <div class="p-1 w-3/4 bg-red-500 flex">
                <div class="bg-[yellow] w-[85%] p-1"></div>
              </div>
            </li>
            <li class="flex flex-row justify-between gap-4">
              <p>Blender</p>
              <div class="p-1 w-3/4 bg-red-500 flex">
                <div class="bg-[yellow] w-[40%] p-1"></div>
              </div>
            </li>
            <li class="flex flex-row justify-between gap-4">
              <p>Revit</p>
              <div class="p-1 w-3/4 bg-red-500 flex">
                <div class="bg-[yellow] w-[90%] p-1"></div>
              </div>
            </li>
            <li class="flex flex-row justify-between gap-4">
              <p>Photoshop</p>
              <div class="p-1 w-3/4 bg-red-500 flex">
                <div class="bg-[yellow] w-[70%] p-1"></div>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="bg-slate-700 font-light flex lg:w-full flex-col p-4">
      <h2 class="font-extrabold">Resumo Profissional</h2>
      <p>WebXR | SEO | Design</p>
      <p>Rio de Janeiro, RJ, Brasil.</p>
      <div class="divider"></div>
      <h3>Márcio Machado</h3>
    </div>
  </section>
</Layout>