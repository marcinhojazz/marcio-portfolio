  {soft: "Cinema 4D", rate: 90},
  {soft: "Photoshop", rate: 85},
  {soft: "Blender", rate: 60},
  {soft: "Excel", rate: 65},
  {soft: "Figma/AdobeXD", rate: 82},
  {soft: "Rhinoceros 3D", rate: 60},
]

const skillFrontEnd = [
  "Javascript",
  "HTML",
  "CSS",
  "React.JS",
  "Next.JS",
  "Vite.JS",
  "Astro",
  "TailwindCSS",
  "Styled-Components",
  "Three.JS",
  "Aframe",
  "React Three Fiber",
  "WebGL",
]

